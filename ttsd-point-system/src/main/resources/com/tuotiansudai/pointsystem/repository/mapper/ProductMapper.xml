<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.pointsystem.repository.mapper.ProductMapper">

    <cache eviction="LRU" type="com.tuotiansudai.cache.MybatisRedisCache" />

    <resultMap id="productResultMap" type="ProductModel">
        <id column="id" property="id"/>
        <result column="goods_type" property="goodsType"/>
        <result column="product_name" property="productName"/>
        <result column="seq" property="seq"/>
        <result column="image_url" property="imageUrl"/>
        <result column="description" property="description"/>
        <result column="total_count" property="totalCount"/>
        <result column="used_count" property="usedCount"/>
        <result column="product_price" property="productPrice"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="active" property="active"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_time" property="createdTime"/>
        <result column="active_by" property="activeBy"/>
        <result column="active_time" property="activeTime"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <insert id="create" parameterType="ProductModel" useGeneratedKeys="true" keyProperty="id">
        insert into product(`goods_type`,`product_name`, `seq`, `image_url`, `description`, `total_count`, `used_count`, `product_price`, `start_time`, `end_time`, `active`, `created_by`, `created_time`, `active_by`, `active_time`, `updated_by`, `updated_time`)
        value(#{goodsType}, #{productName}, #{seq}, #{imageUrl}, #{description}, #{totalCount}, #{usedCount}, #{productPrice}, #{startTime}, #{endTime}, #{active}, #{createdBy}, #{createdTime}, #{activeBy}, #{activeTime}, #{updatedBy}, #{updatedTime})
    </insert>

    <update id="update" parameterType="ProductModel">
        update product
        set `product_type` = #{productType},
        `product_name` = #{productName},
        `seq` = #{seq},
        `image_url` = #{imageUrl},
        `description` = #{description},
        `total_count` = #{totalCount},
        `used_count` = #{usedCount},
        `start_time` = #{startTime},
        `end_time` = #{endTime} ,
        `active` = #{active},
        `active_by` = #{activeBy},
        `active_time` = #{activeTime},
        `updated_by` = #{updatedBy},
        `updated_time` = #{updatedTime}
        where `id` = #{id}
    </update>

    <select id="findById" parameterType="map" resultMap="productResultMap">
        select * from product where id = #{id};
    </select>

    <select id="findProductCount" resultType="long">
        select count(id) from product
    </select>

    <select id="findProductList" resultMap="productResultMap">
        select * from product
        order by seq, updated_time desc
    </select>

</mapper>