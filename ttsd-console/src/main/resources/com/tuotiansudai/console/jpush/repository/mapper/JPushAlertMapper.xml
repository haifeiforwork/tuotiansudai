<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.console.jpush.repository.mapper.JPushAlertMapper">

    <resultMap id="jPushAlertResultMap" type="jPushAlertModel">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="push_type" property="pushType"></result>
        <result column="push_objects" property="pushObjects"
                typeHandler="com.tuotiansudai.console.util.mybatis.PushObjectHandler"/>
        <result column="push_source" property="pushSource"></result>
        <result column="status" property="status"></result>
        <result column="content" property="content"></result>
        <result column="jump_to" property="jumpTo"></result>
        <result column="jump_to_link" property="jumpToLink"></result>
        <result column="created_time" property="createdTime"></result>
        <result column="created_by" property="createdBy"></result>
        <result column="updated_time" property="updatedTime"></result>
        <result column="updated_by" property="updatedBy"></result>

    </resultMap>

    <insert id="create" parameterType="jPushAlertModel" useGeneratedKeys="true" keyProperty="id">
        insert into jpush_alert (name, push_type,push_objects, push_source, status, content, jump_to, jump_to_link,created_time,created_by,updated_time,updated_by)
        value(#{name}, #{pushType},#{pushObjects,typeHandler=com.tuotiansudai.console.util.mybatis.PushObjectHandler}, #{pushSource}, #{status}, #{content}, #{jumpTo},
         #{jumpToLink}, #{createdTime}, #{createdBy}, #{updatedTime}, #{updatedBy})
    </insert>

    <select id="findPushTypeCount" resultType="int" parameterType="map">
        select count(*) from jpush_alert where push_type = #{pushType}
    </select>

    <select id="findPushAlertCount" resultType="int" parameterType="map">
        select COUNT(*) from jpush_alert
        <where>
            <if test="name != null and name != '' ">
                name like CONCAT(CONCAT('%', #{name}), '%')
            </if>
        </where>
    </select>

    <select id="findPushAlerts" resultMap="jPushAlertResultMap" parameterType="map">
        select * from jpush_alert
        <where>
            <if test="name != null and name != '' ">
                name like CONCAT(CONCAT('%', #{name}), '%')
            </if>
        </where>
        ORDER BY created_time DESC
        LIMIT #{index},#{pageSize}
    </select>

    <!--<update id="update" parameterType="jPushAlertModel">-->
        <!--update jpush_alert set name=#{name},push_type=#{pushType},push_objects=#{pushObjects},push_source=#{pushSource},content=#{content},-->
         <!--jump_to = #{jumpTo},jump_to_link=#{jumpToLink},updated_time=#{updatedTime},updated_by=#{updatedBy},send_no=#{sendNo},msg_id=#{msgId} where id = #{id}-->
    <!--</update>-->

    <select id="findJPushAlertModelById" parameterType="long" resultMap="jPushAlertResultMap">
        select * from jpush_alert where id = #{id}
    </select>

</mapper>