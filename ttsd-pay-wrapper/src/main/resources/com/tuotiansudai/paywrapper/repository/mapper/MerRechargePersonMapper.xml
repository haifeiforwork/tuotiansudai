<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.paywrapper.repository.mapper.MerRechargePersonMapper">

    <resultMap id="requestMap" type="MerRechargePersonRequestModel">
        <id property="id" column="id" />
        <result property="service" column="service"/>
        <result property="signType" column="sign_type"/>
        <result property="sign" column="sign"/>
        <result property="charset" column="charset"/>
        <result property="merId" column="mer_id"/>
        <result property="version" column="version"/>
        <result property="notifyUrl" column="notify_url"/>
        <result property="orderId" column="order_id"/>
        <result property="merDate" column="mer_date"/>
        <result property="payType" column="pay_type"/>
        <result property="userId" column="user_id"/>
        <result property="amount" column="amount"/>
        <result property="gateId" column="gate_id"/>
        <result property="requestTime" column="request_time"/>
        <result property="requestUrl" column="request_url"/>
        <result property="requestData" column="request_data"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="findRequestById" resultMap="requestMap" parameterType="java.lang.Long">
        select * from mer_recharge_person_request where id = #{id}
    </select>

    <insert id="createRequest" keyColumn="id" keyProperty="id" useGeneratedKeys="true" parameterType="MerRechargePersonRequestModel">
        insert into mer_recharge_person_request (service, sign_type, sign, charset, mer_Id, version, notify_url, order_id, mer_date, pay_type, user_id, amount, gate_id, request_time, request_url, request_data, status)
        values (#{service}, #{signType}, #{sign}, #{charset}, #{merId}, #{version}, #{notifyUrl}, #{orderId}, #{merDate}, #{payType}, #{userId}, #{amount}, #{gateId}, #{requestTime}, #{requestUrl}, #{requestData}, #{status})
    </insert>

    <update id="updateRequestStatus" keyColumn="id" keyProperty="id" parameterType="map">
        update mer_recharge_person_request set status = #{status} where id = #{id}
    </update>

</mapper>