<table class="table-striped transfer-list">
    <thead>
        <tr>
            <th>来源</th>
            <th>标题</th>
            <th>时间</th>
        </tr>
    </thead>
    <tbody>
        {{#records}}
        <tr {{^read}}class="unread"{{/read}}>
            <td><span class="icon">【{{#messageTypeHandler}}{{messageCategory}}{{/messageTypeHandler}}】</span></td>
            <td>
                {{#content}}
                    <em class="jump-detail" data-url="/message/user-message/{{userMessageId}}#{{index}}">
                    {{{title}}}
                    <em>
                {{/content}}
                {{^content}}
                <em class="jump-detail" data-url="/message/user-message/{{userMessageId}}#{{index}}">
                    {{{title}}}
                 </em>
                {{/content}}
            </td>
            <td>{{createdTime}}</td>
        </tr>
        {{/records}}

        {{^records}}
            <tr>
                <td colspan="3" class="no-data">暂时没有记录</td>
            </tr>
        {{/records}}
    </tbody>
</table>
<p class="page-count-bottom"><button class="read-all-messages">全部标记为已读</button></p>