<table class="user-bill-list">
    <thead>
    <tr>
        <th>交易时间</th>
        <th>交易类型</th>
        <th class="tr">收入(元)</th>
        <th class="tr">支出(元)</th>
        <th class="tr">冻结(元)</th>
        <th class="tr">可用余额(元)</th>
        <th>备注</th>
    </tr>
    </thead>
    <tbody>
    {{#records}}
    <tr>
        <td>{{createdTime}}</td>
        <td>{{businessType}}</td>
        <td class="tr">+{{income}}</td>
        <td class="tr">-{{cost}}</td>
        <td class="tr">{{freeze}}</td>
        <td class="tr">{{balance}}</td>
        <td>编号:{{id}}</td>
    </tr>
    {{/records}}
    {{^records}}
    <td colspan="7" class="no-data">暂时没有投资记录</td>
    {{/records}}
    </tbody>
</table>