<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.activity.repository.mapper.SchoolExclusiveMapper">

    <cache eviction="LRU" type="com.tuotiansudai.cache.MybatisRedisCache" />

    <resultMap id="schoolExclusiveResultMap" type="com.tuotiansudai.activity.repository.model.SchoolExclusiveModel">
        <id column="id" property="id"></id>
        <result column="invest_id" property="investId"></result>
        <result column="login_name" property="loginName"></result>
        <result column="sum_amount" property="sumAmount"></result>
        <result column="created_time" property="createdTime"></result>

    </resultMap>

    <resultMap id="schoolExclusiveDto" type="com.tuotiansudai.activity.repository.dto.SchoolExclusiveDto">
        <result column="login_name" property="loginName"/>
        <result column="JDECard" property="JDECard"/>
    </resultMap>

    <insert id="create" parameterType="schoolExclusiveModel" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `edxactivity`.`school_exclusive`
        (`invest_id`,
        `login_name`,
        `sum_amount`,
        `created_time`,
        `top_three`)
        VALUES(#{investId},#{loginName},#{sumAmount},#{createdTime},#{topThree})
    </insert>

    <update id="update" parameterType="schoolExclusiveModel">
        UPDATE `edxactivity`.`school_exclusive` SET
        `invest_id`= #{investId},
        `login_name`= #{loginName},
        `sum_amount`= #{sumAmount},
        `top_three` = #{topThree}
        WHERE
        `id` = #{id}
    </update>

    <select id="findSchoolExclusiveModel" parameterType="map" resultType="schoolExclusiveModel">
        SELECT *
        FROM `edxactivity`.`school_exclusive`
        WHERE `invest_id`= #{investId}
        AND `login_name`= #{loginName}
    </select>

    <select id="sumTopThreeIsTrue" parameterType="map" resultType="int">
        SELECT COUNT(se.top_three)
        FROM `edxactivity`.`school_exclusive` se
        WHERE `invest_id`= #{investId}`
        AND `top_three`=1
    </select>

    <select id="sumJDECardByName" parameterType="map" resultMap="schoolExclusiveDto">
        SELECT
        se.login_name,
        SUM(se.top_three) JDECard
        FROM
        `edxactivity`.`school_exclusive` se
        <where>
            <if test="startTime !=null">
                AND ai.created_time >= #{startTime}
            </if>
            <if test="endTime !=null">
                AND ai.created_time &lt;= #{endTime}
            </if>
        </where>
        GROUP BY se.login_name
        ORDER BY JDECard DESC
    </select>

</mapper>