<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.repository.mapper.UserBillMapper">

    <resultMap id="userBillResultMap" type="UserBillModel">
        <id column="id" property="id"></id>
        <result column="login_name" property="loginName"></result>
        <result column="order_id" property="orderId"></result>
        <result column="amount" property="amount"></result>
        <result column="balance" property="balance"></result>
        <result column="freeze" property="freeze"></result>
        <result column="operation_type" property="operationType"></result>
        <result column="business_type" property="businessType"></result>
        <result column="created_time" property="createdTime"></result>
    </resultMap>

    <insert id="create" parameterType="com.tuotiansudai.repository.model.UserBillModel" useGeneratedKeys="true" keyProperty="id">
        insert into user_bill (login_name, order_id, amount, balance, freeze, operation_type, business_type, created_time)
        value(#{loginName}, #{orderId}, #{amount}, #{balance}, #{freeze}, #{operationType}, #{businessType}, #{createdTime})
    </insert>

    <select id="findByLoginName" resultType="java.lang.String" resultMap="userBillResultMap">
        select * from user_bill where login_name = #{loginName}
    </select>

</mapper>