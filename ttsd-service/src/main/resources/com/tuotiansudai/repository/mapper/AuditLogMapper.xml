<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.repository.mapper.AuditLogMapper">

    <resultMap id="auditLogModelResultMap" type="AuditLogModel">
        <id column="id" property="id"></id>
        <result column="login_name" property="loginName"></result>
        <result column="operator_login_name" property="operatorLoginName"></result>
        <result column="ip" property="ip"></result>
        <result column="operation_time" property="operationTime"></result>
        <result column="description" property="description"></result>
    </resultMap>

    <insert id="create" parameterType="AuditLogModel">
        insert into audit_log (login_name, operator_login_name, ip, operation_time, description)
        value(#{loginName}, #{operatorLoginName}, #{ip}, #{operationTime}, #{description})
    </insert>

    <select id="getPaginationData" parameterType="map" resultMap="auditLogModelResultMap">
        select * from audit_log
        <where>
            <if test="loginName != null">
                and login_name = #{loginName}
            </if>
            <if test="operatorLoginName != null">
                and operator_login_name = #{operatorLoginName}
            </if>
            <if test="startTime != null &amp;&amp; endTime != null">
                and operation_time between #{startTime} and #{endTime}
            </if>
        </where>
        order by operation_time desc, id asc
        limit #{index}, #{pageSize}
    </select>

    <select id="count" parameterType="map" resultType="long">
        select count(1) from audit_log
        <where>
            <if test="loginName != null">
                and login_name = #{loginName}
            </if>
            <if test="operatorLoginName != null">
                and operator_login_name = #{operatorLoginName}
            </if>
            <if test="startTime != null &amp;&amp; endTime != null">
                and operation_time between #{startTime} and #{endTime}
            </if>
        </where>
    </select>

</mapper>